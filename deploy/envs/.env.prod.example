# td-sync PRODUCTION environment
# Copy to .env.prod and fill in values
# Run: ./deploy.sh prod

# === Required: Deployment Target ===
DEPLOY_HOST=prod.example.com
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/td-sync

# === Required: Server URL ===
SYNC_BASE_URL=https://sync.example.com

# === Server Config ===
SYNC_LISTEN_PORT=8080
SYNC_ALLOW_SIGNUP=false
SYNC_SHUTDOWN_TIMEOUT=60s
SYNC_LOG_FORMAT=json
SYNC_LOG_LEVEL=info

# === Rate Limits ===
SYNC_RATE_LIMIT_AUTH=10
SYNC_RATE_LIMIT_PUSH=60
SYNC_RATE_LIMIT_PULL=120
SYNC_RATE_LIMIT_OTHER=300

# === Required: Litestream S3 Backup ===
LITESTREAM_S3_BUCKET=td-prod-backups
LITESTREAM_S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
